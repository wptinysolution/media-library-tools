{
	"name": "shopbuilder",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:radiustheme/shopbuilder.git",
	"author": "Mahbubur Rahman <mahbubur001@gmail.com>",
	"license": "MIT",
	"scripts": {
		"dev": "npm run development",
		"development": "mix",
		"watch": "mix watch",
		"watch-poll": "mix watch -- --watch-options-poll=1000",
		"hot": "mix watch --hot",
		"prod": "npm run production && npm run cleanmap",
		"production": "mix --production",
		"package": "npm run clean && npm run dev && npm run prod && npm run dev --package",
		"clean": "rm -rf tmp/*",
		"cleanmap": "rm -rf assets/**/*.map",
		"zip": "npm run package && npm run dev --zip",
		"eslint": "eslint src/js/**/*.js",
		"eslint:fix": "eslint src/js/editor.js --fix",
		"stylelint": "stylelint src/sass/**/**/*.{css,scss}",
		"stylelint:fix": "stylelint src/sass/**/**/*.{css,scss} --fix",
		"prettier": "prettier src/js/**/*.js",
		"prettier:fix": "prettier --write src/js/**/*.jsx"
	},
	"dependencies": {
		"antd": "^5.0.2",
		"array-move": "^4.0.0",
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.3.0",
		"react-sortable-hoc": "^2.0.0",
		"toastr": "^2.1.4"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.2",
		"@babel/preset-react": "^7.18.6",
		"@wordpress/eslint-plugin": "^12.6.0",
		"@wordpress/prettier-config": "^1.4.0",
		"archiver": "^5.3.1",
		"cli-color": "^2.0.3",
		"emojic": "^1.1.17",
		"eslint": "^8.18.0",
		"eslint-plugin-prettier": "^4.2.1",
		"fs-extra": "^10.1.0",
		"laravel-mix": "^6.0.49",
		"postcss": "^8.3.1",
		"sass": "^1.54.0",
		"sass-loader": "^12.1.0",
		"stylelint": "^13.8.0",
		"stylelint-scss": "^3.18.0",
		"wp-pot": "^1.10.2"
	},
	"eslintConfig": {
		"extends": [
			"./.eslintrc.js"
		]
	},
	"prettier": "./.prettierrc.js",
	"stylelint": {
		"ignoreFiles": [
			"./assets/**/*.css",
			"./vendor/**/**/*.css",
			"./node_modules/**/**/*.css",
			"./tests/**/**/*.css",
			"./dist/**/**/*.css"
		],
		"extends": [
			"./.stylelintrc.js"
		]
	}
}
